\usetheme{Warsaw}
\usepackage[dvipsnames]{xcolor}

\definecolor{Dark}{HTML}{131516}
\definecolor{VSPurple}{HTML}{B886F2}
\definecolor{VSPurpleDark}{HTML}{7351AC}
\definecolor{VSBlue}{HTML}{23A8F2}
\definecolor{VSBlueDark}{HTML}{0079BA}
\definecolor{VSBlueLight}{HTML}{00BCF2}


\setbeamercolor{normal text}{fg=VSBlue,bg=Dark}
\setbeamercolor{structure}{fg=VSPurple}

\setbeamercolor{alerted text}{fg=red!85!black}
\setbeamercolor{item projected}{use=item,fg=black,bg=item.fg!35}

\setbeamercolor*{palette primary}{use=structure,fg=structure.fg}
\setbeamercolor*{palette secondary}{use=structure,fg=structure.fg!95!black}
\setbeamercolor*{palette tertiary}{use=structure,fg=structure.fg!90!black}
\setbeamercolor*{palette quaternary}{use=structure,fg=structure.fg!95!black,bg=black!80}
\setbeamercolor{section in head/foot}{fg=VSPurpleDark,bg=black!90} % Change the colors for sections
\setbeamercolor{subsection in head/foot}{fg=white, bg=black!80} % Change the colors for subsections
\setbeamercolor*{framesubtitle}{fg=VSBlueDark}

\setbeamercolor*{block title}{parent=structure,bg=black!85}
\setbeamercolor*{block body}{fg=VSBlue,bg=black!90}

\usefonttheme{default}  
\setbeamertemplate{navigation symbols}{}
\setbeamertemplate{caption}[numbered]

\useoutertheme[subsection=true]{miniframes}
\setbeamertemplate{caption}[numbered]

\setbeamertemplate{enumerate items}[default]
\setbeamercolor{enumerate subitem}{fg=VSBlueDark}

% Import the Berkeley TOC styles
\makeatletter
\setbeamertemplate{section/subsections in toc}[square] 
\makeatother
